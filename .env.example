# Server Configuration
NODE_ENV=development
PORT=3001
TCP_PORT=3000

# Database
MONGODB_URI=mongodb://localhost:27017/gatician-gps
MONGODB_TEST_URI=mongodb://localhost:27017/gatician-gps-test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
CORS_ORIGIN=http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# GPS Configuration
GPS_PROTOCOL=GT06
GPS_COORDINATE_DIVISOR=1800000

# API Configuration
API_PREFIX=/api/v1
